<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="josevillarreal.printedfirm.DetallesServicio"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb"
            android:layout_marginLeft="180dp"
            android:layout_centerInParent="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb"
            android:layout_centerInParent="true"
            android:id="@+id/txtwait"
            android:visibility="invisible"

            />

        <ImageView
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:id="@+id/detallesimg"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detallesnom"
            android:layout_marginTop="20dp"
            android:layout_below="@id/detallesimg"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/detallesdesc"
            android:layout_below="@id/detallesnom"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAgregarServicio"
            android:text="Contratar Servicio"
            android:background="@color/colorAccent"
            android:fontFamily="serif"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</LinearLayout>
